// BayLibre Generic Audio HAL - Minimal build file
// This file only defines BayLibre-specific modules and reuses AOSP audio effect libraries

package {
    default_applicable_licenses: ["hardware_generic_audio_license"],
}

license {
    name: "hardware_generic_audio_license",
    visibility: [":__subpackages__"],
    license_kinds: [
        "SPDX-license-identifier-Apache-2.0",
    ],
    license_text: [
        "NOTICE",
    ],
}

cc_defaults {
    name: "generic_aidlaudioservice_defaults",
    vendor: true,
    shared_libs: [
        "libalsautilsv2",
        "libaudio_aidl_conversion_common_ndk",
        "libaudioaidlcommon",
        "libaudioutils",
        "libbase",
        "libbinder_ndk",
        "libcutils",
        "libfmq",
        "libnbaio_mono",
        "liblog",
        "libmedia_helper",
        "libstagefright_foundation",
        "libtinyalsav2",
        "libutils",
        "libxml2",
        "android.hardware.common-V2-ndk",
        "android.hardware.common.fmq-V1-ndk",
    ],
    header_libs: [
        "libaudio_system_headers",
        "libaudioaidl_headers_generic",
        "libxsdc-utils",
    ],
    cflags: [
        "-DBACKEND_NDK",
    ],
}

cc_library {
    name: "libaudioservicegeneric",
    defaults: [
        "generic_aidlaudioservice_defaults",
        "latest_android_media_audio_common_types_ndk_shared",
        "latest_android_hardware_audio_core_ndk_shared",
        "latest_android_hardware_audio_core_sounddose_ndk_shared",
        "latest_android_hardware_bluetooth_audio_ndk_shared",
    ],
    export_include_dirs: ["include"],
    srcs: [
        "AidlConversionXsdc.cpp",
        "AudioPolicyConfigXmlConverter.cpp",
        "Bluetooth.cpp",
        "CapEngineConfigXmlConverter.cpp",
        "Config.cpp",
        "Configuration.cpp",
        "EngineConfigXmlConverter.cpp",
        "Module.cpp",
        "ModulePrimary.cpp",
        "SoundDose.cpp",
        "Stream.cpp",
        "Telephony.cpp",
        "XsdcConversion.cpp",
        "alsa/Mixer.cpp",
        "alsa/ModuleAlsa.cpp",
        "alsa/StreamAlsa.cpp",
        "alsa/Utils.cpp",
        "bluetooth/DevicePortProxy.cpp",
        "bluetooth/ModuleBluetooth.cpp",
        "bluetooth/StreamBluetooth.cpp",
        "deprecated/StreamSwitcher.cpp",
        "primary/PrimaryMixer.cpp",
        "primary/StreamPrimary.cpp",
        "r_submix/ModuleRemoteSubmix.cpp",
        "r_submix/SubmixRoute.cpp",
        "r_submix/StreamRemoteSubmix.cpp",
        "stub/ApeHeader.cpp",
        "stub/DriverStubImpl.cpp",
        "stub/ModuleStub.cpp",
        "stub/StreamMmapStub.cpp",
        "stub/StreamOffloadStub.cpp",
        "stub/StreamStub.cpp",
        "usb/ModuleUsb.cpp",
        "usb/StreamUsb.cpp",
        "usb/UsbAlsaMixerControl.cpp",
    ],
    // Use AOSP audio policy configuration generators
    generated_sources: [
        "audio_policy_capengine_configuration_aidl_generic",
        "audio_policy_configuration_aidl_generic",
        "audio_policy_engine_configuration_aidl_generic",
    ],
    generated_headers: [
        "audio_policy_capengine_configuration_aidl_generic",
        "audio_policy_configuration_aidl_generic",
        "audio_policy_engine_configuration_aidl_generic",
    ],
    export_generated_headers: [
        "audio_policy_capengine_configuration_aidl_generic",
        "audio_policy_configuration_aidl_generic",
        "audio_policy_engine_configuration_aidl_generic",
    ],
    shared_libs: [
        "android.hardware.bluetooth.audio-impl",
        "libaudio_aidl_conversion_common_ndk",
        "libaudioutils",
        "libbluetooth_audio_session_aidl",
        "liblog",
        "libmedia_helper",
        "libmediautils_vendor",
        "libstagefright_foundation",
        "libtinyxml2",
    ],
    export_shared_lib_headers: [
        "libaudio_aidl_conversion_common_ndk",
    ],
    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wthread-safety",
        "-DBACKEND_NDK",
    ],
}

cc_binary {
    name: "android.hardware.audio.service-aidl.generic",
    relative_install_path: "hw",
    defaults: [
        "generic_aidlaudioservice_defaults",
        "latest_android_hardware_audio_core_sounddose_ndk_shared",
        "latest_android_hardware_audio_core_ndk_shared",
        "latest_android_hardware_bluetooth_audio_ndk_shared",
        "latest_android_media_audio_common_types_ndk_shared",
    ],
    static_libs: [
        "libaudioservicegeneric",
    ],
    shared_libs: [
        "android.hardware.bluetooth.audio-impl",
        "libaudio_aidl_conversion_common_ndk",
        "libbluetooth_audio_session_aidl",
        "liblog",
        "libmedia_helper",
        "libmediautils_vendor",
        "libstagefright_foundation",
        "libtinyxml2",
    ],
    srcs: ["main.cpp"],
    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wthread-safety",
        "-DBACKEND_NDK",
    ],
    installable: false, //installed in apex
}

cc_library {
    name: "libeffectconfig_generic",
    srcs: [
        "EffectConfig.cpp",
    ],
    defaults: [
        "latest_android_hardware_audio_effect_ndk_shared",
        "latest_android_media_audio_common_types_ndk_shared",
    ],
    shared_libs: [
        "libaudioutils",
        "libaudio_aidl_conversion_common_ndk",
        "libbase",
        "libbinder_ndk",
        "liblog",
        "libmedia_helper",
        "libtinyxml2",
        "libutils",
    ],
    header_libs: [
        "libaudio_system_headers",
        "libaudioaidl_headers_generic",
    ],
    export_shared_lib_headers: [
        "libtinyxml2",
    ],
    export_include_dirs: [
        "include",
    ],
    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-DBACKEND_NDK",
    ],
    vendor: true,
    host_supported: true,
    visibility: [":__subpackages__", "//hardware/generic/audio/apex/com.android.hardware.audio"],
    target: {
        android: {
            shared_libs: [
                "libapexsupport",
            ],
        },
    },
}

filegroup {
    name: "effectCommonFile_generic",
    srcs: [
        "EffectContext.cpp",
        "EffectThread.cpp",
        "EffectImpl.cpp",
    ],
    visibility: [":__subpackages__"],
}

cc_library_headers {
    name: "libaudioaidl_headers_generic",
    export_include_dirs: ["include"],
    vendor_available: true,
    host_supported: true,
    visibility: [":__subpackages__"],
}

cc_defaults {
    name: "generic_aidlaudioeffectservice_defaults",
    defaults: [
        "latest_android_media_audio_common_types_ndk_shared",
        "latest_android_hardware_audio_effect_ndk_shared",
    ],
    vendor: true,
    shared_libs: [
        "libaudio_aidl_conversion_common_ndk",
        "libaudioaidlcommon",
        "libaudioutils",
        "libbase",
        "libbinder_ndk",
        "libcutils",
        "libfmq",
        "liblog",
        "libutils",
        "android.hardware.common-V2-ndk",
        "android.hardware.common.fmq-V1-ndk",
    ],
    header_libs: [
        "libaudioaidl_headers_generic",
        "libaudio_system_headers",
        "libsystem_headers",
    ],
    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wthread-safety",
        "-DBACKEND_NDK",
    ],
}

cc_binary {
    name: "android.hardware.audio.effect.service-aidl.generic",
    relative_install_path: "hw",
    defaults: ["generic_aidlaudioeffectservice_defaults"],
    shared_libs: [
        "libapexsupport",
        "libeffectconfig_generic",
    ],
    srcs: [
        "EffectFactory.cpp",
        "EffectMain.cpp",
    ],
    installable: false, //installed in apex
}

prebuilt_etc {
    name: "android.hardware.audio.service-aidl.generic.rc",
    src: "android.hardware.audio.service-aidl.generic.rc",
    installable: false,
}

prebuilt_etc {
    name: "android.hardware.audio.service-aidl.generic.xml",
    src: "android.hardware.audio.service-aidl.generic.xml",
    sub_dir: "vintf",
    installable: false,
}

